### The Essentials ###

# librewolf
super + b
    librewolf 
    
# geany
super + g
    geany 
    
# launch the dwm config
super + c
    geany + ~/.config/dwm/config.def.h

### Utilities ###
# pcmanfm
super + shift + f
    pcmanfm 
    
# ranger 
super + r
	alacritty -e ranger
	
# thunderbird
super + t
	thunderbird
	
# virt-manager
super + shift + v
	virt-manager
	
# Show trayer
super + shift + t
    trayer --edge top --align center --widthtype request --expand true --SetDockType true 
    --SetPartialStrut true --transparent true --alpha 0 --tint 0x000000 --height 22 &

# Hide trayer
super + alt + t
    pkill trayer
	
### Brightness Control ###
XF86MonBrightnessUp	
	brightnessctl set +10%
	
XF86MonBrightnessDown
	brightnessctl set 10%-
	
### Audio Control & Utilities ###

# Increase Volume
ctrl + F3
	amixer set Master 5%+

# Decrease Volume
ctrl + F2
	amixer set Master 5%-

# Mute and Unmnute
ctrl + F4
	amixer set Master toggle
	
# pavucontrol
super + v
	pavucontrol
	
### Restarting SXHKD and DWM ###
# restart sxhkd 
ctrl + shift + r
	pkill -USR1 -x sxhkd
	
# Quit DWM with dm-logout	
super + shift + q
	dm-logout


### dmscripts (SUPER + p followed by another key) ###
super + p; h
    dm-hub
#super + p; {a}
    dm-sounds
